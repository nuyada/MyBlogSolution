@model ASP.Blog.MVC.ViewModels.Role.RoleViewModel

@using ASP.Blog.MVC.Data.Entities;

@{
    ViewData["Title"] = "Добавление роли";
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<h2>Добавление роли</h2>
<div class="tag-block">
    <form class="frm" method="post" asp-controller="Role" asp-action="AddRole">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="mrgn">
            <label asp-for="ID">ID роли</label><br />
            <input asp-for="ID" placeholder="Введите ID" />
            <span asp-validation-for="ID" class="text-danger"></span>
        </div>

        <div class="mrgn">
            <label asp-for="Name">Название роли</label><br />
            <input asp-for="Name" placeholder="Название роли" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mrgn">
            <label asp-for="Description">Описание</label><br />
            <textarea class="textarea" asp-for="Description" placeholder="Описание роли"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mrgn">
            <input class="btn-submit" type="submit" value="Добавить" />
        </div>
    </form>

    <a class="enter-submit" method="get" asp-action="AllRoles" asp-controller="Role">Перейти к списку всех ролей</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
